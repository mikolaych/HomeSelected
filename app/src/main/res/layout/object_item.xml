<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardObject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentCardObject"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/orange">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/categoryObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Курск"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/roomNumberObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="2"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/categoryObject"
                app:layout_constraintBottom_toBottomOf="@id/categoryObject" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/roomNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/roomNumberText"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/roomNumberObject"
                app:layout_constraintStart_toEndOf="@+id/roomNumberObject" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/priceObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="2000000"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/roomNumberText"
                app:layout_constraintStart_toEndOf="@+id/roomNumberText" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/money"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/priceObject"
                app:layout_constraintStart_toEndOf="@id/priceObject" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/streetObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Калининградская"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/categoryObject"
                app:layout_constraintTop_toBottomOf="@+id/categoryObject" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/houseObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/streetObject"
                app:layout_constraintBottom_toBottomOf="@+id/streetObject" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nameContactObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Анастасия"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/phoneContactObject"
                app:layout_constraintStart_toEndOf="@+id/phoneContactObject" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/phoneContactObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="+78952478956"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/streetObject"
                app:layout_constraintTop_toBottomOf="@+id/streetObject" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/editObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/edit_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/deleteObject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/delete"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editObject" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
